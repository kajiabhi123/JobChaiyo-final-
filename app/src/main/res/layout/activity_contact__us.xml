<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#aabbcc"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<com.example.designmodal.jobchaiyo.CustomScrollView
        android:orientation="vertical"
        android:id="@+id/scrollMap"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.v7.widget.CardView
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                app:cardCornerRadius="15dp"
                app:contentPadding="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textStyle="bold"
                        style="@style/textview1"
                        android:text="Contact Us"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                    <TextView
                        style="@style/textview1"
                        android:drawableLeft="@drawable/ic_location_on_black_24dp"
                        android:text="Baneshwor, Kathmandu"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/t_v_email"
                        style="@style/textview1"
                        android:drawableLeft="@drawable/ic_email_black_24dp"
                        android:text="ccinepal.com"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />


                    <TextView
                        android:id="@+id/call"
                        android:clickable="true"
                        android:drawableLeft="@drawable/ic_phone_black_24dp"
                        android:text="+977 014256677"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                app:cardCornerRadius="15dp"
                app:contentPadding="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout

                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textStyle="bold"
                        android:gravity="center"
                        style="@style/textview1"
                        android:layout_marginTop="5dp"
                        android:id="@+id/textView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Feedback"
                        android:textSize="22sp"/>

                    <EditText
                        android:background="@drawable/edittext_style"
                        style="@style/edittext1"
                        android:textColorHint="@color/colorPrimaryDark"
                        android:inputType="text"
                        android:id="@+id/uname"
                        android:hint="Full Name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <EditText
                        android:background="@drawable/edittext_style"
                        style="@style/edittext1"
                        android:inputType="textEmailAddress"
                        android:textColorHint="@color/colorPrimaryDark"
                        android:id="@+id/email"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Email Address" />

                    <EditText
                        android:background="@drawable/edittext_style"
                        style="@style/edittext1"
                        android:id="@+id/contact_number"
                        android:textColorHint="@color/colorPrimaryDark"
                        android:hint="contact_number"
                        android:inputType="number"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />


                    <EditText
                        android:id="@+id/message"
                        style="@style/edittext1"
                        android:background="@drawable/edittext_style"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="2dp"
                        android:ems="4"
                        android:textColorHint="@color/colorPrimaryDark"
                        android:hint="Message"
                        android:inputType="textMultiLine"
                        android:lines="4"
                        android:maxLength="150"
                        android:overScrollMode="always"
                        android:scrollbarStyle="insideInset"
                        android:scrollbars="vertical"
                        android:singleLine="false"
                        android:textSize="22sp"
                        android:gravity=""/>

                    <Button
                        android:textSize="22sp"
                        style="@style/btn1"
                        android:id="@+id/submit"
                        android:text="submit"
                        android:background="@drawable/button_style"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    style="@style/textview1"
                    android:text="Location"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="22sp"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <fragment
                    android:id="@+id/map"
                    android:name="com.google.android.gms.maps.SupportMapFragment"
                    android:layout_width="match_parent"
                    android:layout_height="350dp" />

            </LinearLayout>
        </LinearLayout>
    </com.example.designmodal.jobchaiyo.CustomScrollView>
</LinearLayout>